function virtualEth() {
    sudo ifconfig eth0:$1 $2/22
}

function ethConfig() {
    sudo ifconfig eth0 192.168.101.155/22
    sudo route add default gw 192.168.100.1 eth0
}

function run() {
    ulimit -s 512000
    g++ -g --std=c++11 -Wall -Wshadow "$1" && ./a.out
