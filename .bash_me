function latexmake(){
    latexmk -pdf "$1" > /dev/null 2>&1
    STATUS=$?
    rubber-info --check "$1"
    rubber-info --boxes "$1"
    return $STATUS
}

function previewtex(){
    EVINCE_OPEN=0
    DIR=$(dirname "$1")
    DIR=$(cd $DIR && pwd)
    while true; do
        latexmake "$1" < /dev/null
        STATUS=$?
        if [[ $EVINCE_OPEN == 0 ]]; then
            if [[ $STATUS == 0 ]]; then
                evince "${1%%tex}pdf" &
                EVINCE_OPEN=1
            fi
        fi
        inotifywait -e close_write "$DIR"
    done
}

